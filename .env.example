# データベース設定
DATABASE_URL=postgresql://username:password@localhost:5432/inventory_management
NODE_ENV=development

# サーバー設定
PORT=3000
HOST=localhost

# JWT設定
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# メール設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@company.com

# Slack設定
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_IT_CHANNEL=#it-notifications

# Midway認証設定（オプション）
MIDWAY_AUTH_ENABLED=false
MIDWAY_AUTH_URL=https://midway.amazon.com/auth
MIDWAY_CLIENT_ID=your-client-id
MIDWAY_CLIENT_SECRET=your-client-secret

# ログ設定
LOG_LEVEL=info
LOG_FILE=logs/app.log

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100